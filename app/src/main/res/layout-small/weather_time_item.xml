<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="2dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weather_time_item_statename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:ignore="RelativeOverlap" />
       <TextView
           android:id="@+id/weather_time_item_temp"
           android:textSize="12sp"
           android:textStyle="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="2dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           tools:ignore="RelativeOverlap" />
       <ImageView
           android:id="@+id/weather_time_item_image"
           android:layout_width="64dp"
           android:layout_height="64dp"
           android:layout_alignTop="@+id/weather_time_item_temp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="1dp"
           android:layout_marginEnd="1dp"
           android:layout_alignParentEnd="true"
           tools:ignore="ContentDescription" />
       <TextView
           android:id="@+id/weather_time_item_humidity"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:layout_alignTop="@+id/weather_time_item_statename"
           android:layout_alignParentStart="true"
           android:layout_marginTop="20dp"
           android:layout_marginStart="1dp"
           tools:ignore="RelativeOverlap" />
       <TextView
           android:id="@+id/weather_time_item_wind"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="9sp"
           android:layout_alignTop="@+id/weather_time_item_humidity"
           android:layout_alignParentStart="true"
           android:layout_marginTop="18dp"
           android:layout_marginStart="1dp"
           tools:ignore="RelativeOverlap,SmallSp" />
       <TextView
           android:id="@+id/weather_time_item_pressure"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="9sp"
           android:layout_alignTop="@+id/weather_time_item_wind"
           android:layout_alignParentStart="true"
           android:layout_marginTop="15dp"
           android:layout_marginStart="1dp"
           tools:ignore="RelativeOverlap,SmallSp" />
   </RelativeLayout>
</androidx.cardview.widget.CardView>